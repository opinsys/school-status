
@import url("/styles/vendor/animate.css")
@import "common.styl"

html
  overflow hidden
  background white

body
  background-color transparent
  text-align center

.logo
  text-decoration none
  img
    vertical-align middle


.bb-history-graph
  margin-top 10px
  .legend span
    padding 0px
    font-size 30px

.bb-iframe-info
  border 1px solid black
  padding 15px
  position absolute
  bottom 0px
  right 2px
  width 350px
  color darken(text_color, 20)
  background-color #e7e4d0
  p
    margin 0px

  input
    width 100%
    color darken(text_color, 20)
  box-shadow 0px 0px 50px black


.bb-summary-view
  text-align center
  margin 10px
  color darken(text_color, 20)

  table
    margin-left auto
    margin-right auto

  table td
    font-size 40px
    padding 0px 15px 0px 15px

  h1
    font-size 14pt

